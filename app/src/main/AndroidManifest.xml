<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.favors">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        >
        <activity android:name=".main.FavorsMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            android:noHistory="true"
        </activity>
        <activity android:name=".main.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:noHistory="true"
        </activity>
        <activity
            android:name=".authentication.AuthenticationProcess"
            android:parentActivityName=".main.FavorsMain"
            android:noHistory="true"/>
        <activity
            android:name=".main.LoggedInScreen"
            android:label="@string/title_activity_logged_in__screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".authentication.ConfirmationSent"
            android:label="@string/title_activity_confirmation_sent"
            android:noHistory="true"/>
        <activity
            android:name=".authentication.SetUserInfo"
            android:noHistory="true"/>
        <activity
            android:name=".utils.TestActivity"
            android:label="@string/title_activity_test"/>
    </application>

</manifest>